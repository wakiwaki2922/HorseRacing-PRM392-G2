<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    >

    <!-- Image on Top -->

    <!-- First Text View -->

    <!-- Second Text View -->

    <!-- Third Text View -->

    <!-- Close Button -->

    <ImageView
        android:id="@+id/ivTopImage"
        android:layout_width="109dp"
        android:layout_height="77dp"
        android:scaleType="centerCrop"
        android:src="@drawable/win"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Kết Quả"
        android:textColor="#040000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivTopImage" />

    <TextView
        android:id="@+id/tvResultMessage"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Ngựa số X đã chiến thắng!"
        android:textColor="#FCFFFD"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDialogTitle" />

    <TextView
        android:id="@+id/tvMoneyChange"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Bạn đã thắng + $500"
        android:textColor="#27D700"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvResultMessage" />

    <Button
        android:id="@+id/btnCloseDialog"
        android:layout_width="107dp"
        android:layout_height="47dp"
        android:backgroundTint="@android:color/holo_orange_light"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"
        android:text="Thử lại"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMoneyChange" />

</androidx.constraintlayout.widget.ConstraintLayout>